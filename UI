1b. Simple program to understand dart basics
// Simple Dart Program to understand basics

void main() {
  // Variables
  String name = "Shiva";
  int age = 22;
  double height = 5.9;
  bool isStudent = true;

  // Printing variables
  print("Hello, my name is $name.");
  print("I am $age years old and $height feet tall.");
  print("Am I a student? $isStudent");

  // Conditional
  if (age >= 18) {
    print("I am an adult.");
  } else {
    print("I am not an adult.");
  }

  // Loop
  print("Counting from 1 to 5:");
  for (int i = 1; i <= 5; i++) {
    print(i);
  }

  // List example
  List<String> fruits = ["Apple", "Banana", "Mango"];
  print("My favorite fruits:");
  for (var fruit in fruits) {
    print(fruit);
  }
}



